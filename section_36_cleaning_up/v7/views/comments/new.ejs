<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Comment to <%= camp.name %></h1>
        <div style="min-width: 300px; width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%=camp._id%>/comments" method="POST">
                <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <input class="form-control"type="text" name="comment[author]" placeholder="author">
                </div>
                <div class="form-group">
                    <input class="btn brn-lg btn-primary btn-block" type="submit">
                </div>
            </form>
            <a href="/campgrounds/<%=camp._id%>">Return to <%= camp.name %> Page</a>
        </div>
        
        
    </div>
</div>

<% include ../partials/footer %>