<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%=camp.name%></h1>
        <div style="min-width: 300px; width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST">
                <div class="form-group">
                <input value="<%= camp.name %>" class="form-control" type="text" name="campground[name]">
                </div>
                <div class="form-group">
                    <input value="<%= camp.image %>" class="form-control"type="text" name="campground[url]">
                </div>
                <div class="form-group">
                    <input value="<%= camp.description %>" class="form-control"type="text" name="campground[description]">
                </div>
                <div class="form-group">
                    <input class="btn brn-lg btn-primary btn-block" type="submit">
                </div>
            </form>
            <a href="/campgrounds/">Return to Campgrounds Page</a>
        </div>
        
        
    </div>
</div>

<% include ../partials/footer %>